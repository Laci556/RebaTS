{
  "name": "@rebats/core",
  "version": "0.0.16",
  "description": "Core library for RebaTS, a relationship-based authorization framework.",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Laci556/RebaTS.git",
    "directory": "packages/core"
  },
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsc -p tsconfig.test.json && bun test",
    "benchmark": "tsx ./benches/subject.bench.ts",
    "publish-package": "bun publish --provenance --access public"
  },
  "devDependencies": {
    "@ark/attest": "^0.45.11",
    "@rebats/prettier": "workspace:*",
    "@types/bun": "latest",
    "expect-type": "^1.2.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  }
}
