{
  "name": "@rebats/prisma",
  "version": "0.0.9",
  "description": "Prisma ORM adapter for RebaTS",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Laci556/RebaTS.git",
    "directory": "packages/prisma"
  },
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "publish-package": "bun publish --provenance"
  },
  "devDependencies": {
    "@rebats/core": "workspace:*",
    "@rebats/prettier": "workspace:*",
    "@types/bun": "latest",
    "prisma": "^6.6.0",
    "tsup": "^8.4.0"
  },
  "peerDependencies": {
    "@rebats/core": "workspace:*",
    "@prisma/client": "^6.6.0",
    "typescript": "^5.0.0"
  }
}
