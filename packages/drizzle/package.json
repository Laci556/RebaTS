{
  "name": "@rebats/drizzle",
  "version": "0.0.9",
  "description": "Drizzle ORM adapter for RebaTS",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Laci556/RebaTS.git",
    "directory": "packages/drizzle"
  },
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsc -p tsconfig.test.json && bun test",
    "publish-package": "bun publish --provenance"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@libsql/client": "^0.15.2",
    "@rebats/core": "workspace:*",
    "@rebats/prettier": "workspace:*",
    "@types/bun": "latest",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^1.0.0-beta.1-bd417c1",
    "expect-type": "^1.2.1",
    "pg": "^8.14.1",
    "tsup": "^8.4.0"
  },
  "peerDependencies": {
    "@rebats/core": "workspace:*",
    "drizzle-orm": "^1.0.0-beta.1-bd417c1",
    "typescript": "^5.0.0"
  }
}
